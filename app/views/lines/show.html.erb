<h1><%= @line.number %></h1>

<h3>Stations:</h3>
<ul>
  <% @line.stops.each do |stop| %>
    <li><%= stop.station.name %></li>
  <% end %>
</ul>


<p><%= link_to "Edit", edit_line_path(@line), :class => "btn btn-default" %></p>

<p><%= link_to "Delete", line_path(@line),
                          :confirm => "You sure?",
                          :method => "delete",
                          :class => "btn btn-danger" %></p>
<%= link_to "Return Home", lines_path, :class => "btn btn-primary" %>


<h4>Add a Station to the <%= @line.number %> Line</h4>
<%= form_for(@line.stops.new) do |f| %>
  <div class="form-group">
    <%= f.label :station_id %>
    <%= f.collection_select :station_id, Station.all, :id, :name %>
    <%= f.hidden_field :line_id %>
    <%= f.submit(:class => "btn btn-primary") %>
  </div>
<% end %>

